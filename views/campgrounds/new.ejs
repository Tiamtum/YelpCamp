<% layout("layouts/boilerplate") -%>
<link href='https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.css' rel='stylesheet' />
<link rel="stylesheet" href="/stylesheets/app.css">
<form action="/campgrounds" method="POST" class="validated-form" enctype="multipart/form-data" novalidate>
<div class="row">
    <h1 class="text-center lead fs-1 "> New Campground </h1>
        <div class="col-6 mt-2 ">
                <div class=" input-group mb-3">
                    <label class="form-label" for="title"></label>
                    <span class="input-group-text" >Title</span>
                    <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Does this campground have a name? Put it here (or make something up)!" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="input-group mb-3">
                    <label class="form-label" for="price"></label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">Price (CAD)</span>
                        <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00" aria-describedby="price-label" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <label class="form-label" for="description"></label>
                    <span class="input-group-text" >Description</span>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="Convince us to put this place on our bucket list!" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label lead">Upload Images</label>
                    <input type="file" name="image" id="image" class="form-control" required multiple>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" id="addCampground">Add Campground</button>
                    <a class="card-link btn btn-secondary" href="/campgrounds">Back To Location</a>
                </div>
        </div>
        <div class="col-6  mt-2 ">
            <div id="map"></div>
            <div id="aboutHelp" class="form-text mb-3">Hold click and drag the map above to the location, zoom in with the scroll wheel and then click exactly where your campground is to leave a marker for others to see. </div>
            <div class="input-group mt-3">
                <label class="form-label" for="location"></label>
                <span class="input-group-text" >Location</span>
                <input class="form-control" type="text" name="campground[location]" placeholder="E.g. closest city, the province/state and country" id="location" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="input-group mt-3">
                <label class="form-label" for="latlong"></label>
                <span class="input-group-text" >Latitude, Longitude</span>
                <input class="form-control" type="text" name="campground[latLong]" id="latLong" disabled required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="manualLatLong">
                <label class="form-check-label" for="manualLatLong">
                  Set Latitude and Longitude Manually
                </label>
              </div>
        </div>  
</div>
</form>
<script src="/javascripts/validateForms.js"></script>
<script src="https://api.mapbox.com/mapbox-gl-js/v2.4.1/mapbox-gl.js"></script>
<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
</script>
<script src="/javascripts/clickableMap.js"></script>
