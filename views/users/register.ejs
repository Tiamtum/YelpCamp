<% layout("layouts/boilerplate") -%>
<div class="row pt-5">
    <h1 class="text-center lead fs-1"> Register </h1>
        <div class="col-6 offset-3">
            <form action="/register" method="POST" novalidate class="validated-form"> <!--novalidate so Bootstrap can take over-->
                <div class="input-group">
                    <label class="form-label" for="email"></label>
                    <span class="input-group-text">Email</span>
                    <input class="form-control" type="email" name="email" id="email" maxlength="40" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div id="aboutHelp" class="form-text mb-3">40 Character Limit</div>
                <div class=" input-group">
                    <label class="form-label" for="username"></label>
                    <span class="input-group-text">Username</span>
                    <input class="form-control" type="text" name="username" id="username" maxlength="20" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div id="aboutHelp" class="form-text mb-3">20 Character Limit</div>
                <div class="mb-3 input-group">
                    <label class="form-label" for="password"></label>
                    <span class="input-group-text">Password</span>
                    <input class="form-control" type="password" name="password" id="password" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <button class="btn btn-success">Register</button>
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <a class="card-link btn btn-secondary" href="/campgrounds">Back To Campgrounds</a>
                </div>
            </form>
        </div>
</div>
<script src="/javascripts/validateForms.js"></script>
